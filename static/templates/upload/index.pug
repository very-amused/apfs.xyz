doctype html
html(lang="en")
include ../mixins/head.pug
+head("APFS - Upload")

body(style="background-image: url(\"/img/light/bg.png\")")


include ../mixins/light/navbar.pug
+navbar("upload")

//- Container div with horizontally centered content
div(class="container d-flex align-items-center flex-column")
  //- Upload header
  h1(class="display-4 mt-3") Upload Files Here
  //- Box containing upload controls
  div(class="container d-flex justify-content-center flex-row border rounded bg-light shadow" style="width: 75%; height: 30rem;")
    //- Subcontainer for upload controls
    div(class="container d-flex align-items-center flex-column w-50 border-right")
      //- Upload form
      form(class="mt-5" id="uploadForm" action="/API/upload" method="POST" enctype="multipart/form-data")
        div(class="form-group d-flex justify-content-center flex-column")
          //- Label is styled as a button and made clickable to select a file
          label(for="fileUpload" class="btn btn-success") Select a file
          //- Input is hidden behind the label
          input(class="custom-file-input" id="fileUpload" type="file" name="file")
          //- Progress bar
          div(id="progressBarContainer" class="progress rounded-0 d-none")
            div(id="progressBar" class="progress-bar progress-bar-striped bg-primary progress-bar-animated" role="progressbar")
          //- Submit button
          input(class="btn btn-sm btn-success" type="submit" value="Upload")
    //- Subcontainer for info
    div(class="container d-flex align-items-center flex-column w-50 border-left")
